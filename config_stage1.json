{
    "type": "Human",
    "data": {
        "image_size": [
            256,
            256
        ],
        "batch_size": 8,
        "num_workers": 4,
        "train_ratio": 0.8,
        "val_ratio": 0.1,
        "test_ratio": 0.1
    },
    "model": {
        "name": "cto",
        "activation": "sigmoid",
        "params": {
            "fusion_weights": [0.4, 0.3, 0.2, 0.1]
        }
    },
    "training": {
    "epochs": 50,
    "batch_size": 8,
    "learning_rate": 3e-4,
    "k_folds": 5,
    "early_stop_patience": 10,
    "weight_decay": 1e-5,
    "device": "auto",
    "loss_type": "combined",
    "aux_weights": [1.0, 0.4, 0.4, 0.2, 0.2],
    "alpha_schedule": "rebalance",
    "initial_alpha": 0.1,
    "alpha_increment": 0.01
    },
    "augmentation": {
        "train_prob": 0.5,
        "weak_prob": 0.3,
        "strong_prob": 0.5
    },
    "paths": {
        "data_dir": "data",
        "labeled_dir": "data/annotated",
        "unlabeled_dir": "data/frames",
        "model_dir": "models",
        "log_dir": "logs",
        "checkpoint_dir": "models/checkpoints",
        "scripts_dir": "tools/scripts"
    }
}